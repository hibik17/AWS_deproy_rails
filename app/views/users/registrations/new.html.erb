<div class="h-screen w-screen flex justify-center items-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class='w-[400px] h-[600px] bg-gray-700'>
      <%= f.text_field :name, autocomplete: 'user name', autofocus: true %>
      <%= f.email_field :email, autocomplete: 'user email', autofocus: true %>
      <%= f.password_field :password, autocomplete: 'password', autofocus: true %>
      <%= f.password_field :password_confirmation, autocomplete: 'password', autofocus: true %>
    </div>
  <% end %>
</div>
