<div class='w-screen min-h-screen justify-center items-center'>
  <div class='w-full h-[20vh] text-center pt-10 text-5xl text-blue-600 font-thin'>
    Teams
    <span class='hover:cursor-cell'>
      <%= link_to create_group_path do %>
        <span class="material-icons text-3xl ml-10 animate-ping duration-300">group_add</span>
      <% end %>
    </span>
  </div>
  <div class='w-full h-screen my-10'>
    <div class='container mx-auto'>
      <div class='grid grid-cols-3 gap-4'>
        <% @groups.each do |group| %>
          <%= render 'groups/group_card', group: group %>
        <% end %>
      </div>
    </div>
  </div>
</div>
